rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 갤러리 컬렉션 규칙
    match /gallery/{galleryId} {
      // 누구나 읽기 가능 (공개 갤러리)
      allow read: if true;
      
      // 로그인된 사용자만 쓰기 가능 (관리자)
      allow write: if request.auth != null;
      
      // 메모 서브컬렉션 (나의 묵상)
      match /memos/{memoId} {
        // 로그인된 사용자는 읽기 가능
        allow read: if request.auth != null;
        
        // 로그인된 사용자만 쓰기 가능
        allow write: if request.auth != null;
      }
    }

    // 최근 소식 (동기화된 항목) 컬렉션 규칙
    match /updates/{updateId} {
      // 누구나 읽기 가능
      allow read: if true;
      
      // 로그인된 사용자만 쓰기/삭제 가능
      allow write: if request.auth != null;
      
      // 메모 서브컬렉션
      match /memos/{memoId} {
        // 누구나 읽기 가능
        allow read: if true;
        
        // 로그인된 사용자만 쓰기 가능
        allow write: if request.auth != null;
      }
    }

    // 삭제된 항목 기록 (재동기화 방지용)
    match /deletedItems/{document=**} {
      // 읽기: 서버(Admin SDK)만 사용
      allow read: if false;
      
      // 로그인된 사용자는 쓰기 가능 (삭제 기록용)
      allow create: if request.auth != null;
    }

    // 방명록 컬렉션 규칙
    match /guestbook/{document=**} {
      // 누구나 읽기 및 작성 가능
      allow read, create: if true;
      
      // 수정 및 삭제는 관리자만 가능
      allow update, delete: if request.auth != null;
    }

    // 댓글 컬렉션 규칙
    match /comments/{document=**} {
      // 누구나 읽기 및 작성 가능
      allow read, create: if true;
      
      // 삭제는 관리자만 가능
      allow delete: if request.auth != null;
    }

    // 개념 카드 컬렉션 (Question Bridge)
    match /concepts/{conceptId} {
      // 누구나 읽기 가능
      allow read: if true;
      
      // 로그인된 사용자는 생성 가능
      allow create: if request.auth != null;
      
      // 로그인된 사용자는 수정/삭제 가능 (관리자 모드: 본인 확인 해제)
      allow update, delete: if request.auth != null;
    }

    // 메모 컬렉션 그룹 규칙 (나의 묵상 기능용)
    // Collection Group Query를 위해 모든 경로의 memos 서브컬렉션에 대한 규칙 필요
    match /{path=**}/memos/{memoId} {
      // 누구나 읽기 가능 (공개 묵상)
      allow read: if true;
      
      // 로그인된 사용자만 쓰기 가능
      allow write: if request.auth != null;
    }

    // 찬송가 컬렉션
    match /hymns/{hymnId} {
      // 누구나 읽기 가능
      allow read: if true;
      // 로그인된 사용자만 쓰기 가능
      allow write: if request.auth != null;
    }

    // 콘티(Setlist) 컬렉션 규칙
    match /setlists/{setlistId} {
      // 본인이 작성한 콘티만 읽기/쓰기 가능 (ownerId 기반)
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
